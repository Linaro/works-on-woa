---
import BaseHead from "../../../components/Common/BaseHead.astro";
import Header from "../../../components/Common/Header.astro";
import Footer from "../../../components/Common/Footer.astro";
import Search from "../../../components/Search/Search.astro";
import { LOCALES } from "../../../config/i18nConfig";
import { getCurrentLocale } from "../../../util/i18next";

export function getStaticPaths() {
  return LOCALES.map(locale => ({
    params: { lang: locale },
  }));
}

const locale = getCurrentLocale(Astro);
---

<html lang="en">
  <head>
    <BaseHead
      title={"Search | Windows on Arm Ready Software"}
      description={`Find software ready for Windows on Arm`}
    />
  </head>
  <body>
    <Header />
    <main class="max-w-6xl mx-auto px-2 sm:px-5 w-full">
      <Search shouldRedirect={false} />
    </main>
    <Footer language={locale} />
  </body>
</html>
