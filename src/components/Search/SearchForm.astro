---
import { t } from "i18next";
---

<section class="pt-10 min-h-[8rem]">
  <form
    action="/search"
    method="GET"
    enctype="application/x-www-form-urlencoded"
  >
    <div
      class="w-full flex flex-col sm:flex-row justify-between gap-3 items-stretch mb-3"
    >
      <div
        class="bg-white text-black basis-full rounded-full flex flex-row py-2 items-center"
      >
        <div class="py-2 px-5"></div>
        <input type="search" name="query" class="w-full h-full px-1" />
        <button type="submit" class="py-2 px-5 cursor-pointer font-bold"
          >{t('search.search')}</button
        >
      </div>
    </div>
  </form>
</section>
